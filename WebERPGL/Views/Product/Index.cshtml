@model IEnumerable<ERPGL.Models.Product>

@{
    var products = ViewBag.Product;
    ViewData["Title"] = "Products";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<h1>Index</h1>

<p>
    <a asp-action="CreateProduct">Create New</a>
</p>
<table class="table table-hover table-sm table-bordered mt-3">

    @if (products != null)
    {
        <thead>
            <tr>
                <th scope="col">Code</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        foreach (var product in products)
        {
            <tbody>
                <tr>
                    <td>@product.code</td>
                    <td>@product.name</td>
                    <td class="text-center">@product.price</td>
                    <td>
                        <a href="Product/UpdateProduct/@product"><i class="a-thin fa-pencil" alt="UpdateProduct" style="padding-right:10px;"></i></a>
                        @*<a href="Product/Excluir/@product.Id"><i class="bi-x-circle" alt="DeleteProduct"></i></a>*@
                    </td>
                </tr>
            </tbody>
        }
    }
    else
    {
        <br />
        <br />
        <div class="text-center">
            <p>Não há produtos para mostrar aqui! <i class="bi bi-emoji-frown"></i></p>
        </div>
    }
</table>
